<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Add Item</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets/floating-labels.css" rel="stylesheet">
</head>

<body>
    <form class="form-signin" id="itemAdd" action="/products/item/add" method="POST" enctype="multipart/form-data">
        <div class="text-center mb-4">
            <img class="mb-4" src="/assets/bootstrap-solid.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Add Item</h1>
            <% include ../partials/message %>
        </div>

        <div class="form-label-group">
            <input type="text" name="name" id="name" class="form-control" placeholder="Item Name" required autofocus>
            <label for="name">Item Name</label>
        </div>

        <div class="form-label-group">
            <input type="text" name="description" id="description" class="form-control" placeholder="Item Description" required>
            <label for="description">Item Description</label>
        </div>

        <div class="form-label-group">
            <input type="number" name="price" id="price" class="form-control" min="1" step="any" placeholder="Item Price" required>
            <label for="price">Item Price</label>
        </div>

        <div class="form-label-group">
            <input type="number" name="quantity" id="quantity" class="form-control" min="1" step="any" placeholder="Quantity" required>
            <label for="quantity">Quantity</label>
        </div>

        <div class="form-label-group">
            <select data-style="btn-info" name="itemType">
                <optgroup label="Item type">
                    <option name="" value="0">Select Item Type</option>
                    <option name="Baby Goods" value="Baby Goods">Baby Goods</option>
                    <option name="Electronics" value="Electronics">Electronics</option>
                    <option name="Small Appliances" value="Small Appliances">Small Appliances</option>
                    <option name="Candles" value="Candles">Candles</option>
                    <option name="Misc" value="Misc">Misc</option>
                </optgroup>
            </select>
        </div>

        <div class="form-label-group">
            <select data-style="btn-info" name="palletNumber">
                <optgroup label="Pallet Number">
                    <option name="" value="0">Select Pallet Number</option>
                    <% for(var i = 1; i <= 50; i+= 1) {%>
                        <option name="<%=i%>" value="<%=i%>"><%=i%></option>
                    <% } %>
                </optgroup>
            </select>
        </div>

        <div class="form-label-group">
            <input id="image" class="form-control" type="file" name="image">
            <label for="image">Image</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <a class="btn btn-success" href="/products">Go back</a>
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Add Items to Inventory</button>
        <p class="mt-5 mb-3 text-center">&copy; 2017-2018</p>
    </form>
</body>

</html>